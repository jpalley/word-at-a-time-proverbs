<style>
p {margin-left:20px;}
.small_table table { margin-left:20px; margin-top:17px; width:370px; text-align:center; } 
.small_table th.name_heading { color:#333333; font-size:11px; font-weight:bold; } 
.small_table table th { border-color:#C7CFE0; border-bottom:1px solid #E2E6EF; margin:0; padding:3px; color:#777777; font-size:9px; } 
.small_table td { border-bottom:1px solid #E2E6EF; margin:0; padding:3px; color:#555555; font-size:11px; } 
.small_table table .even_colomn { background:#F8F8F8 none repeat scroll 0 0; } .some_div td.action_text { width:230px; }

table.listing {
	border: none;
	border-color: gray gray gray gray;
	border-collapse: separate;
	background-color: white;
}
table.listing th {
	font-weight:bold;
	font-size: 14px;
	text-align:center;
	border-bottom: solid 2px gray;
	padding: 3px 3px 3px 3px;
	background-color: white;
	-moz-border-radius: 0px 0px 0px 0px;
}
table.listing td {
	text-align:center;
	border-bottom: solid 2px gray;
	padding: 3px 3px 3px 3px;
	background-color: white;
	-moz-border-radius: 0px 0px 0px 0px;
}

.word{font-size: 18px; border-bottom: solid 2px black; margin:10px; text-align:center;}
div, li{font-size: 14px;}
h1{font-size: 25px;}
legend{font-weight:bold;}
fieldset{border: solid 1px #3B5998;}
.box{
	width: 300px; 
	border: solid 1px; 
	padding: 10px;
	margin: 10px;
}
.light-blue{background-color: #F0F0FF}
.dark-blue{background-color: #D8DFEA}

</style>


<% fb_dashboard do %>
  Improvise! Word at Time Proverbs

  <%= fb_help 'Feedback', "http://www.facebook.com/apps/application.php?id=6236036681" %>
  <%= fb_create_button 'Start a New Category', new_category_path %>
<% end %>

<% fb_tabs do %>
	<%= fb_tab_item("Highest Rated Proverbs", proverbs_path(:order=>'best')) %>
	<%= fb_tab_item("Latest Proverbs", proverbs_path(:order=>'latest')) %>
	<%= fb_tab_item("Leaderboard", users_path) %>
	<%= fb_tab_item("Contribute to Proverbs!", categories_path) %>
<% end %>


<%= yield %>


